{
	"development": {

		"logLevel": "info",

		"cluster": {
			"workers": 1,
			"threadLifetime": 0,
			"respawnDelayOnError": 10
		},

		"watchFilesForChange": {
			"enabled": true,
			"paths": ["etc", "js"],
			"extensions": [".js", ".json"],
			"exclude": ["node_modules", "^\\.", "^~"],
			"reportInterval": 0.5
		},

		"worker": {
			"httpServer": {
				"listenPort": 5566
			}
		}
	},

	"production": {

		"logLevel": "warn",

		"cluster": {
			"workers": 0,
			"threadLifetime": 14400,
			"respawnDelayOnError": 3
		},

		"watchFilesForChange": {
			"enabled": false,
			"paths": ["etc", "js"],
			"extensions": [".js", ".json"],
			"exclude": ["node_modules", "^\\.", "^~"],
			"reportInterval": 20
		},

		"worker": {
			"httpServer": {
				"listenPort": 5566
			}
		}

	}
}
